# Docker Hub images
TALKIE_BACKEND_IMAGE=artshar/talkie-backend:1.0.0
TALKIE_FRONTEND_IMAGE=artshar/talkie-frontend:1.0.0

# PostgreSQL
POSTGRES_DB=talkie
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-me-strong-password

# Backend auth
JWT_SECRET=change-me-super-secret-jwt

# LiveKit auth + networking
LIVEKIT_API_KEY=devkey
LIVEKIT_API_SECRET=change-me-livekit-secret
LIVEKIT_NODE_IP=YOUR_VM_PUBLIC_IP

# CORS (backend)
ALLOWED_ORIGINS=https://call.moderium-ai.ru

# Traefik cert resolver name (must exist in your Traefik config)

TRAEFIK_CERTRESOLVER=le
